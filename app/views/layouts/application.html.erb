<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>The Tiny Trex</title>
    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% end %>
    <%= favicon_link_tag "favicon/favicon.ico" %>
    <%= favicon_link_tag "favicon/apple-touch-icon.png", rel: "apple-touch-icon" %>
    <%= favicon_link_tag "favicon/favicon-32x32.png", type: "image/png", rel: "icon" %>
    <%= favicon_link_tag "favicon/favicon-16x16.png", type: "image/png", rel: "icon" %>
    <link href="<%= image_path 'favicon/manifest.json' %>" rel="manifest">
    <link href="<%= image_path 'favicon/safari-pinned-tab.svg' %>" rel="mask-icon" color="#5bbad5">
     <meta name="msapplication-config" content="<%= image_path 'favicon/browserconfig.xml' %>">
    <meta name="theme-color" content="#ffffff">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-51819529-4', 'auto');
      ga('send', 'pageview');

    </script>
  </head>
  <body>
    <header>
      <nav class="navbar">
        <a class="navbar-brand" href="/"><%= show_svg("logo/trex-logo.svg") %></a>
        <%= link_to 'Home', root_path, class: 'nav-link' %>
        <%= link_to 'About', about_path, class: 'nav-link' %>
      </nav>
    </header>
    <div id="content">
      <%= yield %>
    </div>
    <footer class="footer">
      <div class="container">
        <span class="text-muted">&copy;The Tiny Trex <span class="glyphicon glyphicon-heart"></span></span>
      </div>
    </footer>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <script>
      $('#avatar').Cubexy();
    </script>
    <script>
    $('#menu img').click(function(){
      $('.tab-active').removeClass('tab-active');
      $(this).addClass('tab-active');
      $('#avatar >div').hide();
      $('#avatar >div#'+$(this).attr('data-tab')).show();
      });
      $('#avatar >div').hide();
      $('#avatar >div#background').show();
    </script>
  </body>
</html>